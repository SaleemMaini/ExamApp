<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.ActivityAdminDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/header_bg"
            android:backgroundTint="@color/red">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="75dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="165dp"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/questionManagementBtn"
                android:layout_width="270dp"
                android:layout_height="120dp"
                android:layout_marginBottom="15dp"
                android:text="Question Mangment"
                app:backgroundTint="?attr/colorPrimaryVariant"
                app:icon="@drawable/question_mangment_icon"
                app:iconSize="30dp" />

            <Button
                android:id="@+id/viewStudentMarksBtn"
                android:layout_width="270dp"
                android:layout_height="120dp"
                android:text="View Students Marks"
                app:backgroundTint="?attr/colorPrimaryVariant"
                app:icon="@drawable/student_marks_icon"
                app:iconSize="30dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>